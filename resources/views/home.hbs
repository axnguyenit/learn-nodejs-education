<h1 class="mt-5">HOME PAGE</h1>
<div class="mt-5">
    <div class="row">
        {{#each courses}}
        {{!-- xs sm md lg xl --}}
        <div class="col-xs-12 col-sm-6 col-lg-4 mb-4">
            <div class="card">
                <a href="/courses/{{ this._id }}">
                    <img src="{{ this.image }}" class="card-img-top" alt="...">
                </a>
                <div class="card-body">
                <a href="/courses/{{ this._id }}">
                    <h5 class="card-title">{{ this.name }}</h5>
                </a>
                <p class="card-text">{{ this.description }}</p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>